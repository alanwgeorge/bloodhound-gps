<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:text="From:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            tools:ignore="HardcodedText"
            android:layout_alignParentTop="true"
            android:id="@+id/textView2"/>

        <TextView
            android:id="@+id/latitude1TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:text="37.7594"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:ignore="HardcodedText"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView2"/>

        <TextView
            android:id="@+id/longitude1TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:text="-122.415"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:ignore="HardcodedText"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/latitude1TextView"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:text="To:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            tools:ignore="HardcodedText"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/latitude2TextView"
            android:id="@+id/textView"/>

        <TextView
            android:id="@+id/latitude2TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:text="37.7594"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:ignore="HardcodedText"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/longitude2TextView"/>

        <TextView
            android:id="@+id/longitude2TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-122.415"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:ignore="HardcodedText"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:text="Distance(m):"
            android:textAppearance="?android:attr/textAppearanceSmall"
            tools:ignore="HardcodedText"
            android:layout_centerVertical="true"
            android:id="@+id/textView3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="123"
            android:id="@+id/distanceTextView"
            tools:ignore="HardcodedText"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Sun Jun 22 13:32:00 PDT 2014"
            android:id="@+id/timeTextView"
            tools:ignore="HardcodedText"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</LinearLayout>