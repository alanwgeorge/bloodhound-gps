<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/diff_list_item"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:text="From:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            tools:ignore="HardcodedText"/>

        <TextView
            android:id="@+id/latitude1TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:text="37.7594"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:ignore="HardcodedText"/>

        <TextView
            android:id="@+id/longitude1TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:text="-122.415"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:ignore="HardcodedText"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:text="To:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            tools:ignore="HardcodedText"/>

        <TextView
            android:id="@+id/latitude2TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:text="37.7594"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:ignore="HardcodedText"/>

        <TextView
            android:id="@+id/longitude2TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-122.415"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:ignore="HardcodedText"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:text="Distance(m):"
            android:textAppearance="?android:attr/textAppearanceSmall"
            tools:ignore="HardcodedText"/>

        <TextView
            android:id="@+id/distanceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView3"
            android:text="123"
            android:textAppearance="?android:attr/textAppearanceSmall"
            tools:ignore="HardcodedText"/>

        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Sun Jun 22 13:32:00 PDT 2014"
            android:textAppearance="?android:attr/textAppearanceSmall"
            tools:ignore="HardcodedText"/>

    </RelativeLayout>

</LinearLayout>